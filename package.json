{
  "name": "holdmybeer",
  "private": true,
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun --workspaces run build",
    "dev": "bun --workspaces run dev",
    "dev:run": "bun --workspaces run dev -- --project ./fixtures/dev-source",
    "bootstrap": "bun --workspaces run dev -- --project .",
    "release": "bun --workspaces run release",
    "test": "bun --workspaces run test",
    "test:watch": "bun --workspaces run test:watch",
    "typecheck": "bun --workspaces run typecheck"
  }
}
